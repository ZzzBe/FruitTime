/* pages/chart-test/chart-test.wxss */
.container {
  padding: 20rpx;
  background: #f9fafb;
  min-height: 100vh;
}

.section {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 500;
  color: #182135;
}

.export-btn {
  background: #10b981;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.chart-canvas {
  width: 100%;
  height: 400rpx;
}