/* pages/fruit-detail/index.wxss */
.container {
  padding: 20rpx;
  background: #f9fafb;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.fruit-header {
  position: relative;
  margin-bottom: 30rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.fruit-header image {
  width: 100%;
  height: 400rpx;
  display: block;
}

.header-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  padding: 30rpx;
}

.fruit-info .title {
  font-size: 36rpx;
}

.price-section {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 48rpx;
  font-weight: bold;
  color: #10b981;
}

.unit {
  font-size: 24rpx;
  color: #667085;
  margin-left: 10rpx;
}

.tags {
  display: flex;
  gap: 10rpx;
  margin-left: auto;
}

.tag {
  padding: 5rpx 15rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.tag-season {
  background: #dcfce7;
  color: #166534;
}

.tag-hot {
  background: #fee2e2;
  color: #991b1b;
}

.info-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
}

.label {
  font-size: 24rpx;
  color: #667085;
  margin-bottom: 10rpx;
}

.value {
  font-size: 26rpx;
  color: #182135;
  font-weight: 500;
}

.nutrition-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.nutrition-content {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.chart-container {
  width: 200rpx;
  height: 200rpx;
}

.chart {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(#10b981 0% 92%, #e5e7eb 92% 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.chart-inner {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.chart-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #182135;
}

.chart-label {
  font-size: 20rpx;
  color: #667085;
}

.chart-legend {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.bg-green {
  background: #10b981;
}

.bg-yellow {
  background: #f59e0b;
}

.bg-orange {
  background: #f97316;
}

.bg-red {
  background: #ef4444;
}

.nutrition-detail {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.nutrition-list {
  display: flex;
  flex-direction: column;
}

.nutrition-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f3f4f6;
}

.nutrition-item:last-child {
  border-bottom: none;
}

.taste-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.tag-green {
  background: #dcfce7;
  color: #166534;
}

.tag-red {
  background: #fee2e2;
  color: #991b1b;
}

.tag-yellow {
  background: #fef3c7;
  color: #92400e;
}

.tag-purple {
  background: #f3e8ff;
  color: #7c3aed;
}

.description {
  font-size: 24rpx;
  color: #667085;
  line-height: 1.5;
}

.health-advice {
  padding: 30rpx;
  margin-bottom: 30rpx;
  background: linear-gradient(135deg, #eff6ff, #dbeafe);
}

.section-header {
  display: flex;
  align-items: center;
}

.icon-heart {
  color: #ef4444;
  font-size: 32rpx;
}

.advice-list {
  display: flex;
  flex-direction: column;
}

.advice-item {
  display: flex;
  align-items: flex-start;
}

.icon-check {
  color: #22c55e;
  font-size: 28rpx;
  margin-right: 15rpx;
}

.icon-warning {
  color: #f59e0b;
  font-size: 28rpx;
  margin-right: 15rpx;
}

.icon-info {
  color: #3b82f6;
  font-size: 28rpx;
  margin-right: 15rpx;
}

.advice-text {
  font-size: 24rpx;
  color: #1e3a8a;
  flex: 1;
}

.buy-advice {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.advice-steps {
  display: flex;
  flex-direction: column;
}

.step-item {
  display: flex;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background: #10b981;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  font-weight: 500;
  color: #182135;
  display: block;
  margin-bottom: 5rpx;
}

.step-desc {
  font-size: 24rpx;
  color: #667085;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #e5e7eb;
}

.action-grid {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
}

.primary {
  background: #10b981;
  color: white;
}

.secondary {
  background: #3b82f6;
  color: white;
}

.icon-plus, .icon-heart {
  font-size: 28rpx;
  margin-right: 10rpx;
}