/* 全局样式优化版 */

/* 基础容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 20rpx;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(140, 155, 184, 0.12);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 按钮样式 */
.btn {
  background: #0052d9;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn:active {
  opacity: 0.8;
}

.btn-secondary {
  background: #f0f4ff;
  color: #0052d9;
}

.btn-large {
  padding: 30rpx;
  font-size: 28rpx;
}

.btn-small {
  padding: 15rpx;
  font-size: 24rpx;
}

